rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Specific folder rules if needed
    match /uploads/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /library/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}