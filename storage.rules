rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin role based on email
    function isAdmin() {
      return request.auth.token.email == 'admin@uttarandhratirupati.org' || request.auth.token.email == 'admin@temple.com';
    }
  
    // Allow public read for all files in the temple-assets path
    // Allow write (uploads/deletes) only for authenticated admins
    match /temple-assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
  }
}
