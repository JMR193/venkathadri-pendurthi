rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if user is authenticated (and implicitly admin for this app structure)
    function isAdmin() {
      return request.auth != null; 
    }

    // Global Settings
    match /settings/global {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Public Content (News, Gallery, Library)
    match /news/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /gallery/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /library/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User Submissions
    match /feedback/{document=**} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }

    match /bookings/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
      // Users can only read via specific queries if we implement user-auth later
    }

    match /donations/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Internal Transactions
    match /transactions/{document=**} {
       allow read, write: if isAdmin();
    }
  }
}